<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/adminlte/adminlte.css') }}">
        {% endblock %}
    </head>
    <body class="hold-transition {{ admin_lte_context.skin|default("")}} sidebar-mini">
        <div class="overlay">
            <div id="loader"></div>
        </div>
        <div class="wrapper">

            {{ include('layouts/header.html.twig') }}

            {{ include('layouts/left.html.twig') }}

            <div class="content-wrapper">
                {% block body %}{% endblock %}
            </div>
            <footer class="main-footer">
                <div class="pull-right hidden-xs">
                    <b>Version</b> 2.4.0
                </div>
                <strong>Copyright Â© 2018 .</strong> All rights reserved.
            </footer>
        </div>

        {% block javascripts %}
            <script src="{{ asset('bundles/adminlte/adminlte.js') }}"></script>
        {% endblock %}
    </body>
</html>
